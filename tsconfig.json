{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],

    "paths": {
      "@atoms": ["./components/atoms"],
      "@atoms/*": ["./components/atoms/*"],
      "@molecules": ["./components/molecules"],
      "@molecules/*": ["./components/molecules/*"],
      "@ui": ["./components/ui"],
      "@ui/*": ["./components/ui/*"],
      "@layout": ["./components/layout"],
      "@layout/*": ["./components/layout/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
